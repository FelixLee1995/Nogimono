<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/iv_avatar_comchild"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:src="@drawable/morenhead"
        />
    <TextView
        android:id="@+id/tv_nicknama_comchild"
        android:layout_toRightOf="@id/iv_avatar_comchild"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/black"
        tools:text="lalala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_time_comchild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_nicknama_comchild"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="1小时前"
        />

    <TextView
        android:id="@+id/tv_floor_comchild"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:text="#23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_content_comchild"
        android:layout_below="@id/tv_nicknama_comchild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        tools:text="dfasjjljkasjdlfkjkldjfksjdaklfjdkjfklsadfj"
        />


</RelativeLayout>