<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear_content"
    android:fitsSystemWindows="true"
    tools:context=".ui.SettingActivity">


    <include layout="@layout/main_header4"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/linear_avater"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:layout_height="80dp">

                <TextView
                    android:text="头像"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    />


                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"></View>
                <ImageView
                    android:id="@+id/iv_avater"
                    android:layout_marginLeft="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/morenhead"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/entergaryright"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_nickname"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:text="昵称"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:text="测试账号"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/entergaryright"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_gender"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                >

                <TextView

                    android:text="性别"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/entergaryright" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_3"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:text="生日"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_born"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:text="2017-08-11"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/entergaryright"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_location"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:text="所在地"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_loca"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:text="北京市"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/entergaryright"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_introduce"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:text="自我介绍"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_introduce"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/entergaryright"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/linear_phone"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                >

                <TextView


                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="手机号码"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/entergaryright"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_email"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="电子邮箱"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/entergaryright"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_pingfen"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                >

                <TextView

                    android:text="去评分"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_pingfen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/entergaryright"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearexit"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                >

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="退出登录"
                    android:textSize="16sp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/entergaryright"

                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
