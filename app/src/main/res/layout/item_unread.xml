<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/iv_unread"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/morenhead"
        android:layout_margin="10dp"
        />

       <TextView
           android:id="@+id/tv_nickname_unread"
           android:layout_toRightOf="@id/iv_unread"
           android:layout_marginTop="10dp"
           tools:text="aaaaaaaaaaaaaaaaaaa"
           android:textColor="@color/black"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

    <TextView
         android:id="@+id/tv_msg_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_unread"
        android:layout_below="@id/tv_nickname_unread"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginRight="30dp"
        tools:text="dsfjksadjflkdsjldslfjdksjflkdsjflkdjslfjlkadsjflksdjf"
        />

    <TextView
        android:id="@+id/tv_time_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1小时"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"

        />



</RelativeLayout>