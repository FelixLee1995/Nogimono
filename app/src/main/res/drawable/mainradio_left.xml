<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_checked="true" ><shape android:shape="rectangle">
        <solid android:color="@color/main_bg_color" />
        <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"
            android:bottomRightRadius="0dp" android:topRightRadius="0dp"/>
    </shape></item>


    <item android:state_focused="false" android:state_selected="false"><shape android:shape="rectangle">
        <solid android:color="@null" />
        <stroke android:width="1px" android:color="@color/mainpage_radiocolor" />
        <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"
            android:bottomRightRadius="0dp" android:topRightRadius="0dp"/>
    </shape></item>


    <item ><shape android:shape="rectangle">
        <solid android:color="@null" />
        <stroke android:width="1px" android:color="@color/mainpage_radiocolor" />
        <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"
            android:bottomRightRadius="0dp" android:topRightRadius="0dp"/>
    </shape></item>
</selector>